var shipment = angular.module('shipment_detail', ["ngRoute", "xeditable", "ui.bootstrap"]);
var case_data = angular.module('case_detail', ["ngRoute", "xeditable", "ui.bootstrap"]);
var configuration = angular.module('configuration_detail', ["ngRoute", "xeditable", "ui.bootstrap"]);
var item_master = angular.module('item_master', ["ngRoute", "xeditable", "ui.bootstrap"]);
var login = angular.module('login', ["ngRoute", "ui.bootstrap"]);


shipment.config(['$routeProvider',
 function($routeProvider) {
   $routeProvider.
     when('/shipmentHeader', {
       templateUrl: 'shipment_header.html', controller: 'shipmentEditCtrl'})
    .otherwise({
            templateUrl: '/assets/shipment_maintenance/shipment_header.html', controller: 'shipmentEditCtrl'});
     
}]);

shipment.filter('tel', function () {
            return function (phoneNumber) {
                if (!phoneNumber)
                    return phoneNumber;
                return formatLocal('US', phoneNumber);
            }
        });

shipment.run(function(editableOptions) {
 editableOptions.theme = 'bs3';
});
case_data.run(function(editableOptions) {
 editableOptions.theme = 'bs3';
});
configuration.run(function(editableOptions) {
    editableOptions.theme = 'bs3';
});
item_master.run(function(editableOptions) {
    editableOptions.theme = 'bs3';
});





    shipment.factory("UserService", function($http){

        return {

            get_data : function($scope, url) {

                $http.get(url).success(function(data) {
                    $scope.shipment_header = data.shipment_header;
                    $scope.shipment_details = data.shipment_detail;

                });

                }
            }
        });


 