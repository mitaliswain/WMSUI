<html ng-app="shipment_detail">
	<head>
		<%= csrf_meta_tag %>
	</head>	


<body ng-controller="shipmentCtrl">

<div>
	<button type="button" class="btn btn-primary"> Wahrehouse : </button> {{shipment_header.warehouse}}
	<button type="button" class="btn btn-primary"> Client:  </button>{{shipment_header.client}}
	<button type="button" class="btn btn-primary"> Shipment:  </button> {{shipment_header.shipment_nbr}} 
</div>

<div>

<div class="panel-group" id="accordion" style="width: 60%">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
          Shipment Header
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in">
      <div class="panel-body">
		  	<div>ASN Type: <a href="#" id="asn_type" editable-text="shipment_header.asn_type" onbeforesave="updateHeader($data, this, shipment_header.id)">{{ shipment_header.asn_type || "empty" }}</a></div>
		  	<div>Source: <a href="#" id="source" editable-text="shipment_header.source" onbeforesave="updateHeader($data, this, shipment_header.id">{{ shipment_header.source || "empty" }}</a></div>
		  	<div>Source Comment: <a href="#" id="source_comment" editable-text="shipment_header.source_comment" onbeforesave="updateHeader($data, this, shipment_header.id)">{{ shipment_header.source_comment || "empty" }}</a></div>
		  	<div>Appointment Number: <a href="#" id="appointment_nbr" editable-text="shipment_header.appointment_nbr" onbeforesave="updateHeader($data, this, shipment_header.id)">{{ shipment_header.appointment_nbr || "empty" }}</a></div>
		  	<div>Dock Door: <a href="#" id="door_door" editable-text="shipment_header.door_door" onbeforesave="updateHeader($data, this, shipment_header.id")>{{ shipment_header.door_door || "empty" }}</a></div>
		  	<div style="float: left">Purchase Order: <a href="#" id="purchase_order_nbr" editable-text="shipment.shipment_header.purchase_order_nbr" onbeforesave="updateHeader($data, this, shipment_header.id)">{{ shipment_header.purchase_order_nbr || "empty" }} </a> </div>
     </div>
    </div>
        <div class="panel-heading">
          <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
          Shipment Details
        </a>
      </h4>
    </div>
    <div id="collapseTwo" class="panel-collapse collapse in">
      <div class="panel-body">
				<div class="panel-group" id="accordion_detail" style="width: 60%">
				   <header ng-repeat-start="shipment_detail in shipment_details">
				      <div class="panel panel-default">
					    <div class="panel-heading">
					      <h4 class="panel-title">
					        <a data-toggle="collapse" data-parent="#accordion_detail" href="#collapse_detail_{{$index}}" >
					          Item: {{shipment_detail.item}}
					        </a>
					      </h4>
					    </div>
					    <div id="collapse_detail_{{$index}}" class="panel-collapse collapse in">
					      <div class="panel-body">
					      		<div>PO Quantity: <a href="#" id="po_qty" editable-text="shipment_detail.po_qty" onbeforesave="updateDetail($data, this, shipment_detail.id)">{{ shipment_detail.po_qty || "empty" }}</a></div>
		  						<div>received_qty: <a href="#" id="received_qty" editable-text="shipment_detail.received_qty" onbeforesave="updateDetail($data, this, shipment_detail.id)">{{ shipment_detail.received_qty || "empty" }}</a></div>
						  </div>
						 </div> 	
		 </header>	
		 <header ng-repeat-end></header>	
     </div>
    </div>

  </div>
 </div> 

</div>

		
</body>
</html>	 