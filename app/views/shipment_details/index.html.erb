<html>
<head></head>

<body>
	<div ng-app="shipment_list" ng-controller="ShipmentListCtrl" style="width: 60%">
		<a href="/">
			<h2>Shipment List</h2>
		</a>	
		<table border="1" class="table table-striped">
		<thead>	
			<tr>
				<td>Shipment</td>
				<td>Shipemnt Type</td>
				<td><i class="icon-plus-sign"></i></td>					
			</tr>
		</thead>	
			<tr ng-repeat="shipment_header in shipment_headers">
				<td>{{shipment_header.shipment_nbr}}</td>
				<td>{{shipment_header.asn_type}}</td>
				<td>
					<a 
					data-toggle="modal"
                     data-target="#basicModal">
				  	<i class="icon-edit"></i></a>
				</td>					
			</tr>

		</table>

	</div>
	
	<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&amp;times;</button>
            <h4 class="modal-title" id="myModalLabel">Shipment Detail</h4>
            </div>
            <div class="modal-body" style="height:400px; max-height:400px; width:100%; max-width:100%;">
                <iframe src="/shipmentdetails/Shipment1#?shipment=Shipment1&warehouse=WH1&client=WM" style="width: 100%; height: 100%"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
  </div>
</div>
</body>
</html>	