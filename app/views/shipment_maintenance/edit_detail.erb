
<html ng-app="shipment_detail">
	<head>
		<%= csrf_meta_tag %>
		<style>
			.asn_header {
				width: 50%;
				float: left
			}
		</style>
	</head>


	<body ng-controller="shipmentEditCtrl">
	
		<div>
			<button type="button" class="btn btn-primary">
				Wahrehouse :
			</button>
			{{shipment_header.warehouse}}
			<button type="button" class="btn btn-primary">
				Client:
			</button>
			{{shipment_header.client}}
			<button type="button" class="btn btn-primary">
				Shipment:
			</button>
			{{shipment_header.shipment_nbr}}
		</div>

		<div class="panel-group" id="accordion" style="width: 90%">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"> Shipment Details </a></h4>
				</div>
				<div id="collapseTwo" class="panel-collapse collapse in">
					<div class="panel-body">
						<div class="panel-group" id="accordion_detail" style="width: 100%">
							<div  class="btn-default">
								<div ng-show="globalInfo.error" class="bg-danger" style="width: 100%; height: 30px">
									Error:{{global_notification}}
								</div>
								<div ng-show="globalInfo.info" class="bg-info" style="width: 100%; height: 30px">
									{{global_notification}}
								</div>
							</div>
							<header ng-repeat-start="shipment_detail in shipment_details">
								<div class="panel panel-default">
									<div class="panel-heading">
										<h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion_detail" href="#collapse_detail_{{$index}}" > Item: {{shipment_detail.item}} </a></h4>
									</div>
									<div id="collapse_detail_{{$index}}" class="panel-collapse collapse">
										<div class="panel-body">
											<div ng-include src="detail_template.url"></div>
										</div>
									</div>
							</header>
							<header ng-repeat-end></header>
						</div>
					</div>

				</div>
			</div>

		</div>

	</body>
</html>
